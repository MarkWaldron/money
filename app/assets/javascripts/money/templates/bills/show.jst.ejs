<a class="btn btn-default" href="/profile" id="profile" role="button">profile</a>
<a class="btn btn-default" href="/bills" id="show-bills" role="button">bills</a>
<a class="btn btn-default" id="signout" href="/" role="button">signout</a>

<div>
  id: <%= id %>
  name: <%= name %>
  next_due_date: <%= next_due_date %>
  amount: <%= amount %>
  category: <%= category.label %>
  repeat_interval: <%= repeat_interval.label %>
  tags: <%= _.pluck(tags, 'name') %>
  payments: <% _.each(payments, function(payment) { %>
    payment id: <%= payment.id %>
    payment amount: <%= payment.amount %>
    payment source: <%= payment.payment_source.name %> (<%= payment.payment_source.type %>)
  <% }); %>
</div>