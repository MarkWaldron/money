<form id="edit-payment-source-form" class="form-horizontal">
  <div class="validation-response"></div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="name">
      card name*
    </label>
    <div class="col-sm-10">
      <input class="form-control" type="text" id="name" name="name" placeholder="card name (assign a nickname)" required value="<%= name %>"/>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label" for="type">
      card type*
    </label>
    <div class="col-sm-10">
      <select class="form-control" class="type" id="type" name="type" required>
        <option class="credit-card" value="CreditCard" <%= ('CreditCard' == type) ? 'selected' : '' %>>Credit Card</option>
        <option class="debit-card" value="DebitCard" <%= ('DebitCard' == type) ? 'selected' : '' %>>Debit Card</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-primary" type="submit">
        edit card
      </button>
      <button class="btn btn-default cancel-edit-payment-source" type="reset">
        cancel
      </button>
    </div>
  </div>
</form>